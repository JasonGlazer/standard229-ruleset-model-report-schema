{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "http://data.ashrae.org/standard229/standard229-ruleset-model-report.schema.json",
	"title": "ASHRAE Standard 229 Summary Input Output Schema",
	"description": "A summary of building energy model inputs and outputs for confirming rulesets in ASHRAE Standard 229",
	"type": "object",
	"additionalProperties": false,
	"properties": {
		"transformation-stage": {
			"description": "Stage in the transformation process in applying ruleset",
			"type": "string",
			"enum": [
				"user",
				"proposed",
				"baseline"
			],
			"additionalProperties": false
		},
		"test-id": {
			"description": "Used when instance files are for testing a specific rule and corresponds to Test-ID on Example Test Case V2 tab in Test Case Description spreadsheet",
			"type": "string",
			"additionalProperties": false
		},
		"climate-zone":{
			"description": "The climate zone is based on ASHRAE 169 and Annex 1 of 90.1.",
			"type": "string",
			"enum": [
				"0A", "0B", 
				"1A", "1B",
				"2A", "2B",
				"3A", "3B", "3C",
				"4A", "4B", "4C",
				"5A", "5B", "5C",
				"6A", "6B",
				"7",
				"8" 
			], 
			"additionalProperties": false
		},
		"exterior-lighting-areas": {
			"description": "Lighting for the exterior of a building and the building grounds.",
			"type": "array",
			"items": {
				"$ref": "#/definitions/exterior-lighting-item"
			}
		},
		"building": {
			"description": "Contains all the details of the building on the site.",
			"type": "object",
			"properties": {
				"name": {
					"type": "string"
				},
				"thermal-blocks": {
					"type": "array",
					"items": {
						"$ref": "#/definitions/thermal-block-item"
					}
				},
				"hvac-systems":{
					"type": "array",
					"items": {
						"$ref": "#/definitions/hvac-system-item"
					}  
				}
			},
			"additionalProperties": false
		}
	},
	"definitions": {
		"thermal-block-item": {
			"description": "A collection of one or more HVAC zones grouped together for simulation purposes. Spaces need not be contiguous to be combined within a single thermal block.",
			"type": "object",
			"properties": {
				"name": {
					"type": "string"
				},
				"building-area-type": {
					"type": "string",
					"enum": [
						"multifamily",
						"healthcare-outpatient",
						"hospital",
						"hotel",
						"motel",
						"office",
						"restaurant",
						"retail",
						"school",
						"warehouse",
						"all_others"
					]
				},
				"space-conditioning-category": {
					"type": "string",
					"enum": [
						"nonresidential-conditioned-space",
						"residential-conditioned-space",
						"semiheated-space"
					]
				},
				"exterior-above-grade-walls": {
					"type": "array",
					"items": {
						"$ref": "#/definitions/exterior-above-grade-wall-item"
					}
				}
			}
		},
		"exterior-above-grade-wall-item":{
			"description": "A collection of one or more HVAC zones grouped together for simulation purposes. Spaces need not be contiguous to be combined within a single thermal block.",
			"type": "object",
			"properties": {
				"area": {
					"type": "number", 
					"exclusiveMinimum": 0
				},
				"azimuth": {
					"type": "number",
					"minimum": 0,
					"exclusiveMaximum": 360
				},
				"vertical-fenestration-percentage": {
					"type": "number",
					"minimum": 0,
					"maximum": 100
				},
				"fenestration-assembly-UFactor":{
					"type": "number",
					"minimum": 0
				},
				"fenestration-assembly-SHGC":{
					"type": "number",
					"minimum": 0
				},
				"fenestration-assembly-visible-transmittance":{
					"type": "number",
					"minimum": 0
				}
			}
		},
		"exterior-lighting-item": {
			"description": "Lighting for the exterior of a building and the building grounds.",
			"type": "object",
			"properties": {
				"name": {
					"type": "string"
				},
				"category": {
					"type": "string",
					"enum": [
						"parking_lots_and_drives",
						"walkways_narrow",
						"walkways_wide",
						"plaza_areas",
						"special_feature_areas",
						"stairways",
						"main_entries",
						"other_doors",
						"canopies",
						"open_outdoor_sales",
						"street_frontage_vehicle_sales_lots",
						"building_facades",
						"automated_teller_machine",
						"night_depositories",
						"gatehouse_inspection_stations",
						"loading_areas_emergency_responders",
						"drive_up_window_fast_food",
						"parking_near_24_hr_retail_entrances"
					]
				},
				"area": {
					"type": "number",
					"exclusiveMinimum": 0
				},
				"power": {
					"type": "number",
					"exclusiveMinimum": 0
				}
			},
			"additionalProperties": false
		},
		"hvac-system-item": {
			"description": "The equipment, distribution systems, and terminals that provide, either collectively or individually, the processes of heating, ventilating, or air conditioning to a building or portion of a building.",
			"type": "object",
			"properties": {
				"tag": {
					"type": "string"
				},
				"baseline-hvac-system-type": {
					"type": "string",
					"enum": [
						"system_1_PTAC",
						"system_2_PTHP",
						"system_3_PSZ-AC",
						"system_4_PSZ-HP",
						"system_5_packaged_VAV_with_reheat",
						"system_6_packaged_VAV_with_PFP_boxes",
						"system_7_VAV_with_reheat",
						"system_8_VAV_with_PFP_boxes",
						"system_9_heating_and_ventilation_gas",
						"system_10_heating_and_ventilation_electric",
						"system_11_single_zone_VAV",
						"system_12_single_zone_constant_hot_water",
						"system_13_single_zone_constant_electric"
					]
				},
				"fan-brake-horsepower": {
					"type": "number",
					"exclusiveMinimum": 0
				},
				"design-supply-fan-airflow-rate": {
					"type": "number",
					"exclusiveMinimum": 0
				},
				"sum-of-pressure-drop-adjustments-A": {
					"type": "number",
					"minimum": 0
				},
				"electric-power-to-fan-motor": {
					"type": "number",
					"exclusiveMinimum": 0
				}
			},
			"additionalProperties": false
		}
	},
	"required": [
		"transformation-stage"
	]
}